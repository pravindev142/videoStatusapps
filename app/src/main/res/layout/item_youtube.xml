<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <androidx.cardview.widget.CardView
        app:cardElevation="3dp"
        android:id="@+id/card_view_category_status"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="7dp"
        android:layout_marginTop="2dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/relative_layout_item_youtube"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/cv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:gravity="center|left"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">
                        <TextView
                            android:paddingLeft="10dp"
                            android:gravity="center|left"
                            android:textSize="16dp"
                            android:id="@+id/text_view_item_youtube_title"
                            android:textColor="@color/primary_text"
                            android:textStyle="bold"
                            android:text="Water Wallpaper"
                            android:layout_width="match_parent"
                            android:layout_marginRight="90dp"
                            android:layout_height="50dp" />
                        <RelativeLayout
                            android:gravity="center|right"
                            android:layout_marginRight="8dp"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp">
                            <androidx.appcompat.widget.AppCompatImageView
                                android:tint="@color/primary_text"
                                app:srcCompat="@drawable/ic_access_time"
                                android:layout_width="15dp"
                                android:layout_height="50dp" />
                            <TextView
                                android:textSize="13dp"
                                android:id="@+id/text_view_created_item_youtube"
                                android:gravity="center"
                                android:textColor="@color/primary_text"
                                android:text="2K Views"
                                android:layout_marginLeft="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp" />
                        </RelativeLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:background="@drawable/border_top"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.appcompat.widget.AppCompatImageView
                            android:adjustViewBounds="true"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/bg_transparant"
                            android:id="@+id/image_view_thumbnail_item_youtube"
                            android:layout_centerVertical="true"
                            android:layout_width="match_parent"
                            android:layout_height="220dp" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_margin="4dp"
                            android:padding="2dp"
                            android:tint="@color/white"
                            android:visibility="visible"
                            app:srcCompat="@drawable/ic_youtube" />
                        <RelativeLayout
                            android:elevation="1dp"
                            android:layout_marginTop="5dp"
                            android:layout_alignParentRight="true"
                            android:id="@+id/relative_layout_item_youtube_review"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:paddingBottom="2dp"
                            android:paddingTop="2dp"
                            android:background="@color/yellow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <androidx.appcompat.widget.AppCompatImageView
                                android:tint="@color/white"
                                app:srcCompat="@drawable/ic_access_time"
                                android:layout_width="20dp"
                                android:layout_height="20dp" />
                            <TextView
                                android:textSize="13dp"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:text="@string/on_review"
                                android:layout_marginLeft="25dp"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:elevation="1dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_alignParentLeft="true"
                            android:id="@+id/relative_layout_item_post_delete"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:paddingBottom="2dp"
                            android:paddingTop="2dp"
                            android:background="@color/red"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <androidx.appcompat.widget.AppCompatImageView
                                android:padding="2dp"
                                android:tint="@color/white"
                                app:srcCompat="@drawable/ic_delete_black"
                                android:layout_width="20dp"
                                android:layout_height="20dp" />
                            <TextView
                                android:textSize="13dp"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:text="@string/delete"
                                android:layout_marginLeft="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:layout_margin="5dp"
                                android:elevation="1dp"
                                android:paddingLeft="7dp"
                                android:paddingRight="7dp"
                                android:paddingBottom="4dp"
                                android:paddingTop="4dp"
                                android:background="@drawable/border_views"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <androidx.appcompat.widget.AppCompatImageView
                                    android:tint="@color/white"
                                    app:srcCompat="@drawable/ic_share_app"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp" />
                                <TextView
                                    android:id="@+id/text_view_downloads_item_youtube"
                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    android:text="12 k shares"
                                    android:textSize="10dp"
                                    android:layout_marginLeft="18dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="15dp"  />
                            </RelativeLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:visibility="visible"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentBottom="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:layout_margin="5dp"
                                android:elevation="1dp"
                                android:id="@+id/relative_layout_item_youtube_views"
                                android:paddingLeft="7dp"
                                android:paddingRight="7dp"
                                android:paddingBottom="4dp"
                                android:paddingTop="4dp"
                                android:background="@drawable/border_views"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <androidx.appcompat.widget.AppCompatImageView
                                    android:tint="@color/white"
                                    app:srcCompat="@drawable/ic_eye"
                                    android:layout_width="15dp"
                                    android:layout_height="15dp" />
                                <TextView
                                    android:id="@+id/text_view_views_item_youtube"
                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    android:text="12 k"
                                    android:textSize="10dp"
                                    android:layout_marginLeft="18dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="15dp" />
                            </RelativeLayout>
                        </RelativeLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/relative_layout_dialog_top"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">
                        <LinearLayout
                            android:paddingLeft="10dp"
                            android:gravity="center|left"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp">
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/circle_image_view_item_youtube_user"
                                android:src="@drawable/profile"
                                android:layout_width="25dp"
                                android:layout_height="50dp" />
                            <TextView
                                android:layout_marginLeft="4dp"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:textStyle="bold"
                                android:textSize="13dp"
                                android:gravity="center|left"
                                android:textColor="@color/primary_text"
                                android:id="@+id/text_view_item_youtube_name_user"
                                android:text="user name"
                                android:layout_width="wrap_content"
                                android:layout_height="50dp" />
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center|right"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp">
                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/image_view_fav_item_youtube"
                                android:background="?android:attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true"
                                android:padding="10dp"
                                android:tint="@color/red"
                                app:srcCompat="@drawable/ic_favorite_border_gray"
                                android:layout_width="50dp"
                                android:layout_height="50dp" />
                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/image_view_whatsapp_item_youtube"
                                android:background="?android:attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true"
                                android:padding="10dp"
                                app:srcCompat="@drawable/ic_whatsapp"
                                android:layout_width="50dp"
                                android:layout_height="50dp" />
                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/image_view_share_item_youtube"
                                android:background="?android:attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true"
                                android:padding="10dp"
                                app:srcCompat="@drawable/ic_share"
                                android:layout_width="50dp"
                                android:layout_height="50dp" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>